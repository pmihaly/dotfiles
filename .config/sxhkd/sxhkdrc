# gui programs
super + {w, i, C, t}
    {$BROWSER, dmenuunicode, dmenuqalc, dmenutrans}

# terminal programs
super + {a, r, v, o, g, S}
    $TERMINAL -e {pulsemixer, $FILEBROWSER, $EDITOR -c VimwikiIndex, projectfzf, tuxifzf, sshfzf}

super + e
    mw -Y & $TERMINAL -e neomutt

# content consooming
super + {n, y, Y, J, m}
    $TERMINAL -e {newsboat -c ~/sync/newsboat-cache, ytfzf -lt, ytfzf -ltd, jftui, setsid -f linkhandler "$(xclip -o)"}

# dotfiles obsession
super + {c, s}
    $TERMINAL -e {configfzf, scriptfzf}

# system
super + {W, x}
    {dmenuwifi, slock}

# screenshot
