    mkdir -p "$XDG_PICTURES_DIR/screens" ; ({maim, maim -s} | tee "$XDG_PICTURES_DIR/screens/$(date +%s).png" | xclip -selection clipboard -t image/png) && notify-send "ðŸ“¸ KÃ©pernyÅ‘ lescreenelve"
