# gui programs
super + {w, i, C, t, d, S}
    {$BROWSER, dmenuunicode, rofi -show calc -modi calc -no-show-match -no-sort -no-persist-history, rofitranslate, rofi -show drun, rofi -show ssh}

# terminal programs
super + {a, r, v}
    $TERMINAL -e {pulsemixer, $FILEBROWSER, $EDITOR -c VimwikiIndex}

super + e
    mw -Y & $TERMINAL -e neomutt

# content consooming
super + {n, y, Y, J}
    $TERMINAL -e {newsboat -c ~/sync/newsboat-cache, ytfzf -lt, ytfzf -ltd, jftui}

super + m
    ~/.local/bin/linkhandler "$(xclip -o)"

# dotfiles obsession
super + {c, s}
    {openconfig, openscript}

# system
super + {W, x}
    {dmenuwifi, slock}

# screenshot
super + {p, P}
    mkdir -p "$XDG_PICTURES_DIR/screens" ; ({maim, maim -s} | tee "$XDG_PICTURES_DIR/screens/$(date +%s).png" | xclip -selection clipboard -t image/png) && notify-send "ðŸ“¸ KÃ©pernyÅ‘ lescreenelve"
