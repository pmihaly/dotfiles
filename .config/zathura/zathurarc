set font "Fira code 12"              # Use Hack as our font of choice
set guioptions "v"              # Show a "progress bar" when scrolling up/down
set adjust-open "width"         # Make documents take up all the available space by default
set statusbar-basename "true"   # When using the status bar, show the basename only

set render-loading "false"  # Do not show the "loading" text
set scroll-step    "120"    # Increase the scroll distance when using j/k
set recolor        "true"   # Use our theme colors (<C-r> for the original document colors)

# [colors]
set default-bg                     "#2E3440"
set default-fg                     "#E5E9F0"
set statusbar-bg                   "#2E3440"
set statusbar-fg                   "#E5E9F0"
set inputbar-bg                    "#2E3440"
set inputbar-fg                    "#E5E9F0"
set notification-bg                "#2E3440"
set notification-fg                "#E5E9F0"
set notification-error-bg          "#2E3440"
set notification-error-fg          "#E5E9F0"
set notification-warning-bg        "#2E3440"
set notification-warning-fg        "#E5E9F0"
set highlight-color                "#5E81AC"
set highlight-active-color         "#EBCB8B"
set completion-bg                  "#5E81AC"
set completion-fg                  "#EBCB8B"
set completion-highlight-bg        "#5E81AC"
set completion-highlight-fg        "#EBCB8B"
set recolor-lightcolor             "#2E3440"
set recolor-darkcolor              "#E5E9F0"

set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print

# vim:ft=conf
